<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTxt_Bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:ems="20"
        android:inputType="number"
        android:maxLength="6"
        android:padding="@dimen/default_padding"
        android:textStyle="bold"
        android:layout_margin="@dimen/edit_margin"
        />

    <TextView
        android:id="@+id/txt_Bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:background="@color/editBG"
        android:hint="@string/editTxt"
        android:labelFor="@+id/editTxt_Bill"
        android:padding="@dimen/default_padding"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:ems="24"
        android:layout_margin="@dimen/edit_margin"
        />

    <TextView
        android:id="@+id/txt_Percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginStart="@dimen/left_margin"
        android:layout_marginBottom="@dimen/row_gap"
        android:padding="@dimen/default_padding"
        android:text="@string/percentage"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="@dimen/seekbar_width"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginStart="@dimen/left_margin"
        android:layout_marginBottom="@dimen/row_gap"
        android:padding="@dimen/default_padding"
        android:max="100"
        android:thumbTint="@color/seekcolor"
        android:progressTint="@color/seekcolor"
        />

    <TextView
        android:id="@+id/txt_Tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginStart="@dimen/left_margin"
        android:layout_marginTop="@dimen/row_gap"
        android:layout_marginBottom="@dimen/row_gap"
        android:padding="@dimen/default_padding"
        android:text="@string/tip"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_TipAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginStart="@dimen/left_margin"
        android:layout_marginTop="@dimen/row_gap"
        android:layout_marginBottom="@dimen/row_gap"
        android:padding="@dimen/default_padding"
        android:text="@string/starting_total"
        android:ems="15"
        android:background="@color/total_color"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginStart="@dimen/left_margin"
        android:layout_marginTop="@dimen/row_gap"
        android:padding="@dimen/default_padding"
        android:text="@string/total"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_TotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_marginStart="@dimen/left_margin"
        android:layout_marginTop="@dimen/row_gap"
        android:padding="@dimen/default_padding"
        android:text="@string/starting_total"
        android:ems="15"
        android:background="@color/total_color"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold" />

</GridLayout>